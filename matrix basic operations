        "import numpy as np\n",
        "\n",
        "# Matrisler ve skaler tanımları\n",
        "A1 = np.array([[1, 2], [3, 4]])\n",
        "B1 = np.array([[5, 6], [7, 8]])\n",
        "\n",
        "A2 = np.array([[4, 2], [12, 4]])\n",
        "k = 1 / 4\n",
        "\n",
        "A3 = np.array([[3, 2], [2, 4]])\n",
        "\n",
        "# 1. Matrislerin Toplamı: A1 + B1\n",
        "matrix_sum = A1 + B1\n",
        "\n",
        "# 2. Skaler ile Matris Çarpımı: k * A2\n",
        "scalar_mult = k * A2\n",
        "\n",
        "# 3. A1 ve B1 Matrislerinin Çarpımı: A1 * B1 ve B1 * A1\n",
        "AB_mult = np.dot(A1, B1)\n",
        "BA_mult = np.dot(B1, A1)\n",
        "\n",
        "matrix_sum, scalar_mult, AB_mult, BA_mult\n"
      ]
